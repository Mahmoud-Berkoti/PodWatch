# Build stage
FROM golang:1.23-alpine AS builder

WORKDIR /app

COPY go.mod go.sum ./
RUN go mod download

COPY . .

RUN CGO_ENABLED=0 GOOS=linux go build -o /incident ./incident

# Runtime stage
FROM gcr.io/distroless/static:nonroot

COPY --from=builder /incident /incident

USER nonroot:nonroot

EXPOSE 8081

ENTRYPOINT ["/incident"]
